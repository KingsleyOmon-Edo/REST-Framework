  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\X.Core.PermissionModule.Interfaces\X.Core.PermissionModule.Interfaces.csproj" />
    <ProjectReference Include="..\X.Core.PermissionModule.Model\X.Core.PermissionModule.Model.csproj" />
    <ProjectReference Include="..\X.Core.PermissionModule.Services\X.Core.PermissionModule.Services.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="App_Data\Permissions.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="log4net.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
